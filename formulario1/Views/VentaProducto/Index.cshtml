@model formulario1.Models.VentaProducto
@{
    ViewData["Title"] = "Venta Producto";
}

<h1> @ViewData["Title"]</h1>
<div class="text-center">
   


<form asp-controller="VentaProducto" asp-action="Vender">
        <div class="row mb-3" >
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control form-control-sm" type="text" placeholder="Nombre Producto:">

        <label asp-for="Cantidad" class="form-label"></label>
        <input asp-for="Cantidad" class="form-control form-control-sm" type="number" placeholder="Ingresar Cantidad del Producto:">

        <label asp-for="Precio" class="form-label"></label>
        <input asp-for="Precio" class="form-control form-control-sm" type="number" placeholder="Ingresar Precio del Producto:">

</div>
<div class="form-group" >
    <button type="submit" class="btn btn-primary">Vender Producto  </button>
        </div>
    </form>
    <h1>@ViewData["Message"]</h1>
</div>
